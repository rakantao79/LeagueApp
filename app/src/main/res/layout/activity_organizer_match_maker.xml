<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Organizer.Activities.OrganizerMatchMakerActivity">

    <include
        android:id="@+id/toolbar_organizer_matchmaker"
        layout="@layout/toolbar_layout" />

    <TextView
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create match" />

    <TextView
        android:id="@+id/tvNumberOfApprovedTeams"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approved Team for this Division" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnCreateEightTeamSingleElimination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:text="8 Team Single Elimination"
                android:textColor="@color/primaryTextColor" />

            <Button
                android:id="@+id/btnViewEigthTeamSingleEliminationMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="2.5"
                android:background="@drawable/btn_background"
                android:text="View Match"
                android:textColor="@color/primaryTextColor" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCreateSixTeamRoundRobin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:text="5 Team Round Robin"
                android:textColor="@color/primaryTextColor" />

            <Button
                android:id="@+id/btnViewSixTeamRoundRobin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="2.5"
                android:background="@drawable/btn_background"
                android:text="View Match"
                android:textColor="@color/primaryTextColor" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCreateSixTeamDoubleElimination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:text="6 Team Double Elimination"
                android:textColor="@color/primaryTextColor" />

            <Button
                android:id="@+id/btnViewSixTeamDoubleElimination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="2.5"
                android:background="@drawable/btn_background"
                android:text="View Match"
                android:textColor="@color/primaryTextColor" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>