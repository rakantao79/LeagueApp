<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Organizer.Activities.LeagueDetailActivity">

    <include layout="@layout/toolbar_layout" android:id="@+id/toolbar_leaguedetail"/>

    <ImageView
        android:id="@+id/imgLeagueDetail"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvLeagueDetailTitle"
                android:textAlignment="center"
                android:textSize="18dp"
                android:text="League Title"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvLeagueDetailDescription"
                android:textAlignment="center"
                android:text="League Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnMasterDivision"
                android:textColor="@color/primaryTextColor"
                android:text="View MasterDivision Entries"
                android:background="@drawable/btn_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSeniorDivision"
                android:layout_marginTop="8dp"
                android:textColor="@color/primaryTextColor"
                android:text="View SeniorDivision Entries"
                android:background="@drawable/btn_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnJuniorDivision"
                android:layout_marginTop="8dp"
                android:textColor="@color/primaryTextColor"
                android:text="View Junior Division Entries"
                android:background="@drawable/btn_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnMedietDivision"
                android:layout_marginTop="8dp"
                android:textColor="@color/primaryTextColor"
                android:text="View Midget Division Entries"
                android:background="@drawable/btn_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>